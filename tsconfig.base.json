{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@texnika/shared/*": ["packages/shared/src/*"],
      "@texnika/ui/*": ["packages/ui/src/*"],
      "@texnika/workers/*": ["packages/workers/src/*"]
    }
  }
}
